<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textStyle="bold"
            android:textSize="15dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_notification_time"
            />

        <TextView
            android:id="@+id/txt_notification_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textStyle="bold"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_notification_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textSize="12dp"
            android:maxLines="3"
            android:textColor="@color/black"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_notification_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gary_dark"
        app:layout_constraintTop_toBottomOf="@+id/cl_data"
        app:layout_constraintStart_toStartOf="parent"
       />


</androidx.constraintlayout.widget.ConstraintLayout>