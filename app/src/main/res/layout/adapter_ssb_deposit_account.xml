<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_investment_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:visibility="visible"
        android:padding="10dp">


        <TextView
            android:id="@+id/txt_invest_srno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_title_invest_acc_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/C No. : "
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_invest_acc_no"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_invest_acc_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_invest_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Plan"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_srno" />

        <TextView
            android:id="@+id/txt_invest_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="plan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_plan_title" />

        <TextView
            android:id="@+id/txt_invest_deno_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Deno Amount"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_acc_no" />

        <TextView
            android:id="@+id/txt_invest_deno_amount_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="plan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_deno_amount_title" />


        <TextView
            android:id="@+id/txt_invest_opening_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Opening Date"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_plan_name" />

        <TextView
            android:id="@+id/txt_invest_opening_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="01/01/1970"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_opening_date_title" />

        <TextView
            android:id="@+id/txt_invest_maturity_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Maturity Date"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_deno_amount_name" />

        <TextView
            android:id="@+id/txt_invest_maturity_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="01/01/1970"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_maturity_date_title" />



        <TextView
            android:id="@+id/txt_invest_total_deposit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Deposit"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_opening_date_name" />

        <TextView
            android:id="@+id/txt_invest_total_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_total_deposit_title" />


        <TextView
            android:id="@+id/txt_invest_due_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Due Amount"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_maturity_date_name" />

        <TextView
            android:id="@+id/txt_invest_due_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_due_amount_title" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invest_total_deposit">


            <Button
                android:id="@+id/btn_invest_ssb_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/btncolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Renewal From SSB"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_invest_transaction"
                />

            <Button
                android:id="@+id/btn_invest_upi_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/btncolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Renewal From UPI"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_invest_ssb_payment"
                app:layout_constraintEnd_toStartOf="@+id/btn_invest_transaction"
                />

            <Button
                android:id="@+id/btn_invest_transaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/btncolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Transactions"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/btn_invest_ssb_payment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ssb_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:visibility="gone"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_serial_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/account_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/C No. : "
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_accountNo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_accountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txt_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Plan"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_accountNo" />

        <TextView
            android:id="@+id/txt_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="112122222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_plan_title" />


        <TextView
            android:id="@+id/txt_openingdate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Date"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_plan_title" />

        <TextView
            android:id="@+id/txt_account_opening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="12-11-20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_openingdate_title" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ssb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_account_opening_date">

            <TextView
                android:id="@+id/txt_ssb_total_deposit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total Deposit"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_ssb_total_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12345"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ssb_total_deposit_title" />

            <TextView
                android:id="@+id/txt_ssb_deno_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deno Amount"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_ssb_total_deposit_title" />

            <TextView
                android:id="@+id/txt_ssb_deno_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ssb_deno_title" />


            <Button
                android:id="@+id/ssb_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/btncolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Transactions"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ssb_deno_amount" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
